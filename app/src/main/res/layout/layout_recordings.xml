<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/recordings_page_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/recordings_page_title"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recordings_status_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/recordings_ready"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recordings_folder_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recordings_folder_not_selected"
                android:textSize="15sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1">

                <ListView
                    android:id="@+id/recordings_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerHeight="1dp" />

                <TextView
                    android:id="@+id/recordings_empty_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/recordings_list_empty"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/recordings_start_button"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:backgroundTint="#C62828"
                android:text="@string/recordings_start"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/recordings_pause_resume_button"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:text="@string/recordings_pause"
                android:textSize="19sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/recordings_stop_button"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#455A64"
                android:text="@string/recordings_stop"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/recordings_format_label_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/recordings_format_label"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/recordings_format_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/recordings_format_description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/recordings_change_folder_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/recordings_change_folder" />

            <Button
                android:id="@+id/recordings_open_folder_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/recordings_open_folder" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
