<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/composer_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/composer_project_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/composer_project_title_hint"
        android:inputType="textCapSentences"
        android:maxLines="1" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/composer_new_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_new" />

            <Button
                android:id="@+id/composer_add_line_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_add_line" />

            <Button
                android:id="@+id/composer_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_save" />

            <Button
                android:id="@+id/composer_open_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_open" />

            <Button
                android:id="@+id/composer_export_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_export_png" />

            <Button
                android:id="@+id/composer_images_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_images_title" />

            <Button
                android:id="@+id/composer_undo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_undo" />

            <Button
                android:id="@+id/composer_redo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_redo" />

            <Button
                android:id="@+id/composer_delete_symbol_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_delete_symbol" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/composer_selection_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/composer_selection_info_empty"
        android:textSize="14sp" />

    <ScrollView
        android:id="@+id/composer_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="6dp">

        <LinearLayout
            android:id="@+id/composer_sheet_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <LinearLayout
                android:id="@+id/composer_lines_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/composer_nudge"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/composer_nudge_left_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_nudge_left_1" />

            <Button
                android:id="@+id/composer_nudge_right_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_nudge_right_1" />

            <Button
                android:id="@+id/composer_nudge_up_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_nudge_up_1" />

            <Button
                android:id="@+id/composer_nudge_down_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_nudge_down_1" />

            <Button
                android:id="@+id/composer_nudge_left_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_nudge_left_4" />

            <Button
                android:id="@+id/composer_nudge_right_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_nudge_right_4" />

            <Button
                android:id="@+id/composer_nudge_up_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_nudge_up_4" />

            <Button
                android:id="@+id/composer_nudge_down_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/composer_nudge_down_4" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/composer_symbols"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/composer_symbols_recycler"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:overScrollMode="always" />

</LinearLayout>
