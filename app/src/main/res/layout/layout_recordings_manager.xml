<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/recordings_manager_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/recordings_manage_open"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recordings_manager_status_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/recordings_manage_ready"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/recordings_manager_breadcrumb_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recordings_manager_back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/recordings_manage_back" />

        <View
            android:layout_width="8dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/recordings_manager_create_folder_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/recordings_manage_create_folder" />
    </LinearLayout>

    <TextView
        android:id="@+id/recordings_manager_sort_label_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/recordings_sort_label"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/recordings_manager_sort_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/recordings_manager_drop_zone_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ECEFF1"
        android:gravity="center"
        android:minHeight="44dp"
        android:padding="10dp"
        android:text="@string/recordings_manage_drop_here"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/recordings_manager_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1dp" />

        <TextView
            android:id="@+id/recordings_manager_empty_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/recordings_manage_empty"
            android:textSize="15sp"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>
