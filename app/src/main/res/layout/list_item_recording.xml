<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recording_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="false"
    android:gravity="center_vertical"
    android:minHeight="56dp"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingTop="6dp"
    android:paddingEnd="6dp"
    android:paddingBottom="6dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recording_item_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recording_item_path_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/recording_item_rename_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="6dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:contentDescription="@string/recordings_action_rename_content_description"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_edit"
        android:tint="#607D8B" />

    <ImageButton
        android:id="@+id/recording_item_delete_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="2dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:contentDescription="@string/recordings_action_delete_content_description"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_delete"
        android:tint="#C62828" />
</LinearLayout>
