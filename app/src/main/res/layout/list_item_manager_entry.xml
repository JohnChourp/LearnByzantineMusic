<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/manager_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="false"
    android:gravity="center_vertical"
    android:minHeight="72dp"
    android:orientation="horizontal"
    android:paddingStart="12dp"
    android:paddingTop="10dp"
    android:paddingEnd="8dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/manager_item_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/manager_item_subtitle_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/manager_item_rename_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="6dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:contentDescription="@string/recordings_action_rename_content_description"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_edit"
        android:tint="#607D8B" />

    <ImageButton
        android:id="@+id/manager_item_delete_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="2dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:contentDescription="@string/recordings_action_delete_content_description"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_delete"
        android:tint="#C62828" />

    <ImageButton
        android:id="@+id/manager_item_drag_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="2dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:contentDescription="@string/recordings_manage_drag_content_description"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:tint="#455A64" />
</LinearLayout>
